<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Instagram"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/user_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="User Name"
        android:textColor="#000000"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_tv" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/user_name_edt"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="enter your name"
        android:textColor="#828282"
        app:layout_constraintTop_toBottomOf="@id/user_name_tv" >
        <requestFocus/>
    </androidx.appcompat.widget.AppCompatEditText>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/pass_word_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Pass"
        android:textColor="#000000"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_name_edt" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/pass_word_edt"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="enter your pass word"
        android:textColor="#828282"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/pass_word_tv" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/forgot_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="forgot your password"
        android:textColor="#03A9F4"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pass_word_edt" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="30dp"
        android:background="#03A9F4"
        android:text="login"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/forgot_tv" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/fb_icon"
        android:layout_width="12dp"
        android:layout_height="15dp"
        app:layout_constraintBottom_toBottomOf="@id/login_fb_tv"
        app:layout_constraintEnd_toStartOf="@id/login_fb_tv"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/login_fb_tv"

        app:srcCompat="@drawable/img_1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/login_fb_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="login with your facebook"
        android:textColor="#03A9F4"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/fb_icon"
        app:layout_constraintTop_toBottomOf="@id/login_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>